<p id="notice"><%= notice %></p>

<h1>Login</h1>

<%= form_tag("/users/login") do |f| %>
    <div class="field">
        <%= label_tag(:email, "Email:") %><br>
        <%= text_field_tag(:email) %>
    </div>
    <div class="field">
        <%= label_tag(:password, "Password:") %><br>
        <%= text_field_tag(:password) %>
    </div>
    <div class="actions">
        <%= submit_tag("Login") %>
    </div>
<% end %>

<%= link_to 'New User', new_user_path %>
